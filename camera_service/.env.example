# ============================================================================
# PINECONE CONFIGURATION (Vector Search - Cloud-Hosted)
# ============================================================================
PINECONE_ENABLED=1
PINECONE_API_KEY=pcsk_your_api_key_here_copy_from_pinecone_console
PINECONE_INDEX_NAME=face-recognition
PINECONE_ENVIRONMENT=us-east-1-aws

# ============================================================================
# FACE DETECTION & RECOGNITION
# ============================================================================
FACE_ENROLL_DETECTOR_BACKEND=retinaface
FACE_DETECTOR_BACKEND=retinaface
FACE_DETECTOR_FALLBACK=mtcnn
FACE_DET_CONFIDENCE=0.5
FACE_DET_UPSCALE=1.5
MIN_FACE_SIZE=20
SIMILARITY_THRESHOLD=0.45

# ============================================================================
# TRACKING & ATTENDANCE LOGIC
# ============================================================================
TRACKING_ENABLED=1
TRACK_MIN_SECONDS=3.0
TRACK_MIN_HITS=3
TRACK_IOU_MATCH=0.3
TRACK_STALE_SECONDS=2.0

# ============================================================================
# LIVENESS DETECTION (Anti-spoofing)
# ============================================================================
LIVENESS_ENABLED=1
LIVENESS_WINDOW_SECONDS=3.0
LIVENESS_MIN_MOVEMENT_PX=8.0

# ============================================================================
# CAMERA SETTINGS
# ============================================================================
FRAME_WIDTH=1280
FRAME_HEIGHT=720
